<h1>Sign Up</h1>

 <%= form_for @user do |f| %>
  <div class = "field">
    <%= f.label :username, "Username:" %> <br>
    <%= f.text_field :username %>
  </div> <br>
  <div class= "field">
    <%= f.label :email, "Email:" %> <br>
    <%= f.text_field :email %>
  </div> <br>
  <div class= "field">
    <%= f.label :password, "Password:" %> <br>
    <%= f.password_field :password %>
  </div>
  <br>
  <%= f.submit %>
<% end %>
<br>
<%= link_to 'Sign Up With Google (recommended)', '/auth/google_oauth2' %> <br>
<%= link_to 'Already have an account? Sign in here', sign_in_path %>
